@model WebApp.Models.RetroPartyViewModel

@{
    ViewBag.Title = "Retro Party";
    ViewBag.Action = "Create";
    ViewBag.ListPageUrl = Url.Action("Index");
}

@section breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

@Html.Partial("_BackToList")

@Html.Partial("_ValidationSummary")

<div class="card">
    <div class="card-header">
        <h4>@ViewBag.Action @ViewBag.Title</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-row">
                    <div class="form-group col-md-6 mid-line-1">
                        @Html.LabelFor(model => model.Party, htmlAttributes: new { @class = "col-form-label" })
                        @Html.EditorFor(model => model.Party, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here", maxlength = ViewBag.PartyMaxLength } })
                        @Html.ValidationMessageFor(model => model.Party, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6 mid-line-2">
                        @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "col-form-label" })
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here", maxlength = ViewBag.CodeMaxLength } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 mid-line-1">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here", maxlength = ViewBag.NameMaxLength } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6 mid-line-2">
                        @Html.Label("Type", htmlAttributes: new { @class = "col-form-label" })

                        <div>
                            @Html.LabelFor(model => model.IsDirectRetro, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.IsDirectRetro)
                            @Html.ValidationMessageFor(model => model.IsDirectRetro, "", new { @class = "text-danger" })

                            @Html.LabelFor(model => model.IsPerLifeRetro, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.IsPerLifeRetro)
                            @Html.ValidationMessageFor(model => model.IsPerLifeRetro, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 mid-line-1">
                        @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-form-label" })
                        @Html.DropDownListFor(model => model.Status, (List<SelectListItem>)ViewBag.DropDownStatuses, htmlAttributes: new { @class = "form-control selectpicker" })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6 mid-line-2">
                        @Html.LabelFor(model => model.CountryCodePickListDetailId, htmlAttributes: new { @class = "col-form-label" })
                        @Html.DropDownListFor(model => model.CountryCodePickListDetailId, (List<SelectListItem>)ViewBag.DropDownCountryCodes, htmlAttributes: new { @class = "form-control selectpicker" })
                        @Html.ValidationMessageFor(model => model.CountryCodePickListDetailId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 mid-line-1">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label" })
                        @Html.TextArea("Description", new { @class = "form-control textarea-auto-expand", placeholder = "Type here", rows = "1", maxlength = ViewBag.DescriptionMaxLength })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6 mid-line-1">
                        @Html.LabelFor(model => model.AccountCode, htmlAttributes: new { @class = "col-form-label" })
                        @Html.EditorFor(model => model.AccountCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Type here", maxlength = ViewBag.AccountCodeMaxLength } })
                        @Html.ValidationMessageFor(model => model.AccountCode, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-6 mid-line-2">
                        @Html.LabelFor(model => model.AccountCodeDescription, htmlAttributes: new { @class = "col-form-label" })
                        @Html.TextArea("AccountCodeDescription", new { @class = "form-control textarea-auto-expand", placeholder = "Type here", rows = "1", maxlength = ViewBag.AccountCodeDescriptionMaxLength })
                        @Html.ValidationMessageFor(model => model.AccountCodeDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row form-row-btn">
                    <div class="form-group col-md-12 btn-row">
                        @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-cancel" })
                        <button type="submit" class="btn btn-submit float-right">SAVE</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BackToList")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/textarea-autoresize.js")

    <script>
        $(document).ready(function () {
            $('#Description').autoResize();
            $('#AccountCodeDescription').autoResize();
        });
    </script>
}
