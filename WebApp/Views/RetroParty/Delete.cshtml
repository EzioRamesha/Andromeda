@model WebApp.Models.RetroPartyViewModel

@{
    ViewBag.Title = "Retro Party";
    ViewBag.Action = "Delete";
    ViewBag.ListPageUrl = Url.Action("Index");
}

@section breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

@Html.Partial("_BackToList")

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6"><h4>@ViewBag.Action @ViewBag.Title</h4></div>
            <div class="col-md-6 text-right">
                <span class="@BusinessObject.RetroPartyBo.GetStatusClass(Model.Status)">
                    @BusinessObject.RetroPartyBo.GetStatusName(Model.Status)
                </span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="form-row wrap-form">
            <div class="form-group col-md-8 p-5 text-center delete-heading">
                <h4>Are you sure you want to delete this?</h4>
            </div>
        </div>
        <div class="form-row wrap-form">
            <div class="form-group col-md-8">
                <table class="table table-hover table-delete">
                    <thead>
                        <tr>
                            <th class="w-50">Label</th>
                            <th class="w-50">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Party)</td>
                            <td>@Html.DisplayFor(model => model.Party)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Code)</td>
                            <td>@Html.DisplayFor(model => model.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.IsDirectRetro)</td>
                            <td>
                                @if (Model.IsDirectRetro)
                                {
                                    @Html.Raw("Yes")
                                }
                                else
                                {
                                    @Html.Raw("No")
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.IsPerLifeRetro)</td>
                            <td>
                                @if (Model.IsPerLifeRetro)
                                {
                                    @Html.Raw("Yes")
                                }
                                else
                                {
                                    @Html.Raw("No")
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CountryCodePickListDetailId)</td>
                            <td>
                                @if (Model.CountryCodePickListDetailBo != null)
                                {
                                    @Model.CountryCodePickListDetailBo.ToString()
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Description)</td>
                            <td>@Html.DisplayFor(model => model.Description)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Status)</td>
                            <td>@BusinessObject.RetroPartyBo.GetStatusName(Model.Status)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.AccountCode)</td>
                            <td>@Html.DisplayFor(model => model.AccountCode)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.AccountCodeDescription)</td>
                            <td>@Html.DisplayFor(model => model.AccountCodeDescription)</td>
                        </tr>
                        <tr>
                    </tbody>
                </table>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-row form-row-btn">
                <div class="form-group col-md-12 btn-row">
                    @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-cancel" })
                    <button type="submit" class="btn btn-del float-right">DELETE</button>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BackToList")
