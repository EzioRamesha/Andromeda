@model WebApp.Models.PerLifeClaimRetroDataViewModel

<div class="form-row mt-2">
    <div class="form-group col-md-12">
        <div class="form-group col-md-12">
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="active underline-tab" data-toggle="tab" href="#general">General</a></li>
                <li class="nav-item"><a class="underline-tab" data-toggle="tab" href="#riDataTab">Retro RI Data</a></li>
                <li class="nav-item"><a class="underline-tab" data-toggle="tab" href="#recoveryDetails">Recovery Details</a></li>
                <li class="nav-item"><a class="underline-tab" data-toggle="tab" href="#remarks">Remarks</a></li>
            </ul>


            <div class="tab-content underline-tab-content">

                <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="data-tab">
                    @Html.Partial("_GeneralTab")
                </div>
                <div class="tab-pane fade" id="riDataTab" role="tabpanel" aria-labelledby="data-tab">
                    @Html.Partial("_RiDataTab")
                </div>
                <div class="tab-pane fade" id="recoveryDetails" role="tabpanel" aria-labelledby="data-tab">
                    @Html.Partial("_RecoveryDetails")
                </div>

                <div class="tab-pane fade" id="remarks" role="tabpanel" aria-labelledby="remark-tab">
                    @Html.Partial("_Remark", new ViewDataDictionary { { "showDocuments", true }, { "showStatus", false }, { "showVersion", true }, { "showSubject", true } })
                </div>
            </div>
        </div>
    </div>
</div>
