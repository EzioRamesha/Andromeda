@model WebApp.Models.RetroTreatyViewModel

@{
    ViewBag.Title = "Retro Treaty";
    ViewBag.Action = "Delete";
    ViewBag.ListPageUrl = Url.Action("Index");
}

@section breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

@Html.Partial("_BackToList")

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6"><h4>@ViewBag.Action @ViewBag.Title</h4></div>
            <div class="col-md-6 text-right">
                <span class="@BusinessObject.Retrocession.RetroTreatyBo.GetStatusClass(Model.Status)">
                    @BusinessObject.Retrocession.RetroTreatyBo.GetStatusName(Model.Status)
                </span>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="form-row wrap-form">
            <div class="form-group col-md-8 p-5 text-center delete-heading">
                <h4>Are you sure you want to delete this?</h4>
            </div>
        </div>
        <div class="form-row wrap-form">
            <div class="form-group col-md-8">
                <table class="table table-hover table-delete">
                    <thead>
                        <tr>
                            <th class="w-50">Label</th>
                            <th class="w-50">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.RetroPartyId)</td>
                            <td>@Html.DisplayFor(model => model.RetroPartyCode)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Code)</td>
                            <td>@Html.DisplayFor(model => model.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.TreatyTypePickListDetailId)</td>
                            <td>@Html.DisplayFor(model => model.TreatyType)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.IsLobAutomatic)</td>
                            <td>@Html.Raw(Model.IsLobAutomatic ? "Yes" : "No")</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.IsLobFacultative)</td>
                            <td>@Html.Raw(Model.IsLobFacultative ? "Yes" : "No")</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.IsLobAdvantageProgram)</td>
                            <td>@Html.Raw(Model.IsLobAdvantageProgram ? "Yes" : "No")</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.TreatyDiscountTableId)</td>
                            <td>@Html.DisplayFor(model => model.TreatyDiscountTableRule)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.EffectiveStartDateStr)</td>
                            <td>@Html.DisplayFor(model => model.EffectiveStartDateStr)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.EffectiveEndDateStr)</td>
                            <td>@Html.DisplayFor(model => model.EffectiveEndDateStr)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-row form-row-btn">
                <div class="form-group col-md-12 btn-row">
                    @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-cancel" })
                    <button type="submit" class="btn btn-del float-right">DELETE</button>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BackToList")
