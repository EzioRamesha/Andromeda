@model WebApp.Models.PerLifeAggregationConflictListingViewModel

@{
    ViewBag.Title = "Conflict Listing";
    ViewBag.Action = "Delete";
    ViewBag.ListPageUrl = Url.Action("Index");
}

@section breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

@Html.Partial("_BackToList")

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6"><h4>@ViewBag.Action @ViewBag.Title</h4></div>
        </div>
    </div>
    <div class="card-body">
        <div class="form-row wrap-form">
            <div class="form-group col-md-8 p-5 text-center delete-heading">
                <h4>Are you sure you want to delete this?</h4>
            </div>
        </div>
        <div class="form-row wrap-form">
            <div class="form-group col-md-8">
                <table class="table table-hover table-delete">
                    <thead>
                        <tr>
                            <th class="w-50">Label</th>
                            <th class="w-50">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.TreatyCodeId)</td>
                            <td>@Html.DisplayFor(model => Services.TreatyCodeService.Find(model.TreatyCodeId).Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.RiskYear)</td>
                            <td>@Html.DisplayFor(model => model.RiskYear)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.RiskMonth)</td>
                            <td>@Html.DisplayFor(model => model.RiskMonth)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.InsuredName)</td>
                            <td>@Html.DisplayFor(model => model.InsuredName)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.InsuredGenderCodePickListDetailId)</td>
                            <td>@Html.DisplayFor(model => model.InsuredGenderCodePickListDetailBo.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.InsuredDateOfBirth)</td>
                            <td>

                                @if (Model.InsuredDateOfBirth.HasValue)
                                {
                                    @Model.InsuredDateOfBirth.Value.ToString(Shared.Util.GetDateFormat())
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.PolicyNumber)</td>
                            <td>@Html.DisplayFor(model => model.PolicyNumber)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.ReinsEffectiveDatePol)</td>
                            <td>

                                @if (Model.ReinsEffectiveDatePol.HasValue)
                                {
                                    @Model.ReinsEffectiveDatePol.Value.ToString(Shared.Util.GetDateFormat())
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.AAR)</td>
                            <td>@Html.DisplayFor(model => model.AAR)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.GrossPremium)</td>
                            <td>@Html.DisplayFor(model => model.GrossPremium)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.NetPremium)</td>
                            <td>@Html.DisplayFor(model => model.NetPremium)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.PremiumFrequencyModePickListDetailId)</td>
                            <td>@Html.DisplayFor(model => model.PremiumFrequencyModePickListDetailBo.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.RetroPremiumFrequencyModePickListDetailId)</td>
                            <td>@Html.DisplayFor(model => model.RetroPremiumFrequencyModePickListDetailBo.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CedantPlanCode)</td>
                            <td>@Html.DisplayFor(model => model.CedantPlanCode)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CedingBenefitTypeCode)</td>
                            <td>@Html.DisplayFor(model => model.CedingBenefitTypeCode)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CedingBenefitRiskCode)</td>
                            <td>@Html.DisplayFor(model => model.CedingBenefitRiskCode)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.MLReBenefitCodeId)</td>
                            <td>@Html.DisplayFor(model => model.MLReBenefitCodeBo.Code)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.TerritoryOfIssueCodePickListDetailId)</td>
                            <td>@Html.DisplayFor(model => model.TerritoryOfIssueCodePickListDetailBo.Code)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-row form-row-btn">
                <div class="form-group col-md-12 btn-row">
                    @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-cancel" })
                    <button type="submit" class="btn btn-del float-right">DELETE</button>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BackToList")