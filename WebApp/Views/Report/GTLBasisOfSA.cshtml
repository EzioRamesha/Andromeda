                                var row = header
                                    + "|" + column1 + "|" + column2 + "|" + column3 + "|" + column4 + "|" + column5
                                    + "|" + column6 + "|" + column7 + "|" + column8 + "|" + column9 + "|" + column10;
                                rows.push(row);

                                //console.log(row);
                            });

                            $('#outputTable2 tbody tr').each(function () {
                                var header = $(this).find('td').eq(0).text().trim();
                                var column1 = $(this).find('td').eq(1).text().trim();
