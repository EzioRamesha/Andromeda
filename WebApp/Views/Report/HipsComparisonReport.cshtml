        function initTokenfield(index) {
            var hipsCategoryCount = 0;

            $(document).ready(function () {
                $('#hipsCategory' + index + 'TokenField')
                    .on('tokenfield:createtoken', function (e) {
                        var existingTokens = $(this).tokenfield('getTokens');
                        if (hipsCategoryCount != 0) {
                            $.each(existingTokens, function (el, token) {
                                if (token.value === e.attrs.value) {
                                    e.preventDefault();
                                }
                            });
                        }
                    })
                    .on('tokenfield:createdtoken', function (e) {
                        var valid = app.Comparisons[index].HipsCategories.includes(e.attrs.value)
                        if (!valid) {
                            $(e.relatedTarget).addClass('invalid');
                        }
                        hipsCategoryCount += 1;
                        $("#hipsCategory" + index + "TokenField-tokenfield").removeAttr('placeholder');
                        app.Comparisons[index].HipsCategory = $(this).tokenfield('getTokens').map(e => e.value).join(",");
                    })
                    .on('tokenfield:edittoken', function (e) {
                        var valid = app.Comparisons[index].HipsCategories.includes(e.attrs.value)
                        if (!valid) {
                            e.preventDefault();
                        }
                    })
                    .on('tokenfield:removedtoken', function (e) {
                        hipsCategoryCount -= 1;
                        if (hipsCategoryCount == 0) {
                            $("#hipsCategory" + index + "TokenField-tokenfield").attr("placeholder", "Type here");
                        }
                        app.Comparisons[index].HipsCategory = $(this).tokenfield('getTokens').map(e => e.value).join(",");
                    })
                    .tokenfield({
                        autocomplete: {
                            source: app.Comparisons[index].HipsCategories,
                            delay: 100
                        },
                        showAutocompleteOnFocus: true
                    });
            });
        }


