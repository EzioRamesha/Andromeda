@model WebApp.Models.RiDataBatchViewModel

@{
    ViewBag.Title = "RI Data Batch";
    ViewBag.Action = "Delete";
    ViewBag.ListPageUrl = Url.Action("Index");
}

@section breadcrumb
{
    @Html.Partial("_Breadcrumb")
}

@Html.Partial("_BackToList")

<div class="card">
    <div class="card-header">
        <h4>@ViewBag.Action @ViewBag.Title</h4>
    </div>
    <div class="card-body">
        <div class="form-row wrap-form">
            <div class="form-group col-md-8 p-5 text-center delete-heading">
                <h4>Are you sure you want to delete this?</h4>
            </div>
        </div>
        <div class="form-row wrap-form">
            <div class="form-group col-md-8">
                <table class="table table-hover table-delete">
                    <thead>
                        <tr>
                            <th class="w-50">Label</th>
                            <th class="w-50">Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.CedantId)</td>
                            <td>@string.Format("{0} - {1}", Model.CedantBo.Code, Model.CedantBo.Name)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.TreatyId)</td>
                            <td>@(Model.TreatyBo != null ? Model.TreatyBo.TreatyIdCode : "")</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.ConfigId)</td>
                            <td>@string.Format("{0} - {1}", Model.RiDataConfigBo.Code, Model.RiDataConfigBo.Name)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.Quarter)</td>
                            <td>@Html.DisplayFor(model => model.Quarter)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.RecordType)</td>
                            <td>@BusinessObject.RiDatas.RiDataBatchBo.GetRecordTypeName(Model.RecordType)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.PersonInCharge)</td>
                            <td>@(Model.PersonInChargeBo != null ? Model.PersonInChargeBo.FullName : "")</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(model => model.ReceivedAtStr)</td>
                            <td>@Model.ReceivedAtStr</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color form-row form-row-btn">
                <div class="form-group col-md-12 btn-row">
                    @Html.ActionLink("CANCEL", "Index", null, new { @class = "btn btn-cancel" })
                    <button type="submit" class="btn btn-del float-right">DELETE</button>
                </div>
            </div>
        }
    </div>
</div>

@Html.Partial("_BackToList")